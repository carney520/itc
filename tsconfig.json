{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["es2015", "dom", "esnext", "webworker"],
    "declaration": true,
    "target": "es5",
    "strict": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["types", "node_modules/@types"]
  },
  "exclude": ["node_modules", "dist", "**/__tests__/*"]
}
